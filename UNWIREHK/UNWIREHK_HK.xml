            <pubDate>Wed, 20 Mar 2024 08:05:18 +0000</pubDate>
            <category>
                <![CDATA[科技新聞]]>
            </category>
            <category>
                <![CDATA[PlayStation 5]]>
            </category>
            <category>
                <![CDATA[PlayStation 5 Pro]]>
            </category>
            <category>
                <![CDATA[SONY]]>
