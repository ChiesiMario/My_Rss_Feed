            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Wed, 20 Dec 2023 10:18:52 +0000</pubDate>
            <category>
                <![CDATA[汽車科技]]>
            </category>
            <category>
                <![CDATA[Zeekr]]>
