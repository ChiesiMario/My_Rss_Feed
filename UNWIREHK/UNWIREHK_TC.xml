            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Tue, 02 Jan 2024 14:30:18 +0000</pubDate>
            <category>
                <![CDATA[iOS App]]>
            </category>
            <category>
                <![CDATA[遊戲情報]]>
            </category>
            <category>
                <![CDATA[Aladdin X]]>
            </category>
            <category>
                <![CDATA[Apple]]>
            </category>
            <category>
