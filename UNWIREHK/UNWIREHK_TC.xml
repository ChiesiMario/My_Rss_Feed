            <category>
                <![CDATA[遊戲情報]]>
            </category>
            <category>
                <![CDATA[Epic Games]]>
            </category>
            <category>
                <![CDATA[Fortnite]]>
            </category>
            <category>
                <![CDATA[iOS]]>
            </category>
