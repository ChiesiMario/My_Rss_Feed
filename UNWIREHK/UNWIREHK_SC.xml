            <category>
                <![CDATA[潮流手表]]>
            </category>
            <category>
                <![CDATA[Fossil]]>
            </category>
            <category>
                <![CDATA[Fossil Gen 6]]>
            </category>
            <category>
                <![CDATA[Wear OS]]>
            </category>
