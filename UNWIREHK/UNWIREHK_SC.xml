            <pubDate>Sat, 14 Oct 2023 21:55:52 +0000</pubDate>
            <category>
                <![CDATA[生活科技]]>
            </category>
            <category>
                <![CDATA[qualcomm]]>
            </category>
            <category>
                <![CDATA[裁员]]>
