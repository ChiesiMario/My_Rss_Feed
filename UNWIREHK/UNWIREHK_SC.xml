            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Wed, 14 Feb 2024 09:00:41 +0000</pubDate>
            <category>
                <![CDATA[游戏情报]]>
            </category>
            <category>
                <![CDATA[Dead Island]]>
            </category>
            <category>
                <![CDATA[Dead Island:RIptide]]>
